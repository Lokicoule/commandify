{
  "name": "commandzen",
  "version": "0.1.1",
  "description": "A command-line argument parsing library that allows for quick and easy parsing of command-line arguments.",
  "keywords": [
    "cli"
  ],
  "author": "Loik F.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lokicoule/commandzen.git"
  },
  "bugs": {
    "url": "https://github.com/Lokicoule/commandzen/issues"
  },
  "homepage": "https://github.com/Lokicoule/commandzen#readme",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/cjs",
    "dist/esm",
    "dist/types"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "clean": "rm -rf dist/ && rm -rf coverage/",
    "test": "jest",
    "coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "release": "npm run build && release-it"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "coveralls": "^3.1.1",
    "jest": "^29.5.0",
    "release-it": "^15.9.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  }
}
